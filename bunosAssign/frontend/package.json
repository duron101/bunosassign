{
  "name": "bonus-simulation-frontend",
  "version": "1.0.0",
  "description": "奖金模拟系统前端",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:project-collaboration": "playwright test --grep \"项目协作\"",
    "test:project-collaboration:comprehensive": "playwright test project-collaboration-comprehensive.spec.ts",
    "test:project-collaboration:edge-cases": "playwright test project-collaboration-edge-cases.spec.ts",
    "test:project-collaboration:visual": "playwright test project-collaboration-visual.spec.ts",
    "test:project-collaboration:api": "playwright test project-collaboration-api.spec.ts",
    "test:report": "playwright show-report",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "axios": "^1.11.0",
    "echarts": "^5.6.0",
    "element-plus": "^2.10.6",
    "pinia": "^2.3.1",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "vxe-table": "^4.15.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/tsconfig": "^0.5.1",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.49.0",
    "eslint-plugin-playwright": "^0.18.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "3.0.3",
    "sass-embedded": "^1.90.0",
    "typescript": "~5.3.0",
    "vite": "^5.4.19",
    "vitest": "^0.34.1",
    "vue-tsc": "^1.8.27"
  }
}
