# 开发环境配置
NODE_ENV=development
PORT=3000

# 数据库配置（开发环境 - JavaScript SQLite）
DB_TYPE=js-sqlite
DB_PATH=../database/bonus_system.db
DB_STORAGE=../database/bonus_system.db

# 开发模式配置
ENABLE_MOCK_DATA=true
ENABLE_DB_LOGGING=true
ENABLE_API_LOGGING=true

# JWT配置（开发环境）
JWT_SECRET=dev-jwt-secret-key-2024-secure
JWT_REFRESH_SECRET=dev-refresh-secret-key-2024-secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# 文件上传配置
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads/dev

# 开发调试配置
DEBUG=true
LOG_LEVEL=debug
